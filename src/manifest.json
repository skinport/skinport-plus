{
  "manifest_version": 3,
  "name": "Skinport",
  "version": "1.0.0",
  "description": "Skinport extension",
  "icons": {
    "48": "icon.png"
  },
  "host_permissions": ["<all_urls>"],
  "permissions": ["storage", "declarativeNetRequest"],
  "content_scripts": [
    {
      "run_at": "document_start",
      "matches": ["https://skinport.com/*", "https://steamcommunity.com/*"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "phishing",
        "enabled": true,
        "path": "/rulesets/phishing.json"
      }
    ]
  },
  "web_accessible_resources": [
    {
      "resources": [
        "/web_accessible_resources/skinport-phishing-warning.html",
        "/web_accessible_resources/skinport-phishing-warning.css"
      ],
      "use_dynamic_url": true
    }
  ]
}
