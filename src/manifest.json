{
  "manifest_version": 3,
  "name": "Skinport",
  "version": "1.0.0",
  "description": "Skinport extension",
  "icons": {
    "48": "icon.png"
  },
  "host_permissions": [
    "https://skinport.com/*",
    "https://api.skinport.com/*",
    "https://steamcommunity.com/*"
  ],
  "permissions": ["storage"],
  "content_scripts": [
    {
      "run_at": "document_start",
      "matches": ["https://skinport.com/*", "https://steamcommunity.com/*"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true,
    "browser_style": false
  }
}
