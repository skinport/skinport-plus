{
  "manifest_version": 3,
  "name": "Skinport",
  "version": "1.0.0",
  "description": "Skinport extension",
  "host_permissions": ["https://api.skinport.com/*"],
  "content_scripts": [
    {
      "run_at": "document_end",
      "matches": ["https://steamcommunity.com/*"],
      "exclude_matches": ["https://*/login/*"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["static/*.ttf"],
      "matches": ["https://steamcommunity.com/*"]
    }
  ]
}
