{
  "type": "module",
  "scripts": {
    "dev": "run-p 'build:js -- --dev' 'build:css:content -- --watch'",
    "load:chrome": "web-ext run --target=chromium",
    "build": "run-s build:js build:css:*",
    "build:js": "tsx ./scripts/build.ts",
    "build:css:content": "EXT_SCRIPT=content tailwindcss -i ./src/content/index.css -o ./dist/content.css"
  },
  "dependencies": {
    "clsx": "^2.0.0",
    "dom-chef": "^5.1.0",
    "ky": "^1.1.3",
    "select-dom": "^9.0.0"
  },
  "devDependencies": {
    "@tsconfig/node20": "^20.1.2",
    "esbuild": "^0.19.5",
    "esbuild-plugin-clean": "^1.0.1",
    "esbuild-plugin-copy": "^2.1.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.5.6",
    "tailwindcss": "^3.3.5",
    "tsx": "^3.14.0",
    "typescript": "^5.2.2",
    "web-ext": "^7.8.0"
  },
  "webExt": {
    "sourceDir": "./dist"
  }
}