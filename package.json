{
  "type": "module",
  "scripts": {
    "dev": "del ./dist && run-p 'build:js -- --dev' 'build:css:* -- --watch'",
    "load:chrome": "web-ext run --target=chromium",
    "build": "del ./dist && run-p build:js build:css:*",
    "build:js": "tsx ./scripts/build.ts",
    "build:css:content": "EXT_SCRIPT=content tailwindcss -i ./src/content/index.css -o ./dist/content.css"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.0.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "dom-chef": "^5.1.0",
    "ky": "^1.1.3",
    "lucide-react": "^0.292.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "select-dom": "^9.0.0",
    "tailwind-merge": "^2.0.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@tsconfig/node20": "^20.1.2",
    "@types/react": "^18.2.36",
    "@types/react-dom": "^18.2.14",
    "autoprefixer": "^10.4.16",
    "del-cli": "^5.1.0",
    "esbuild": "^0.19.5",
    "esbuild-plugin-copy": "^2.1.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.5.6",
    "tailwindcss": "^3.3.5",
    "tsx": "^3.14.0",
    "typescript": "^5.2.2",
    "web-ext": "^7.8.0"
  },
  "webExt": {
    "sourceDir": "./dist"
  }
}
